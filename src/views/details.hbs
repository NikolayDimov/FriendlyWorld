<main class="details">
    <!-- Details page -->
    <section id="details">
        <div id="details-wrapper">
            <p id="details-title">Name: Show</p>
            <div id="img-wrapper">
                <img src="{{currAnimal.image}}" />
            </div>
            <div id="info-wrapper">
                <table>
                    <tr>
                        <td>
                            <p>
                                Years: <span id="details-years">{{currAnimal.year}}</span>
                            </p>
                        </td>
                        <td>
                            <p>Kind: <span id="details-kind">{{currAnimal.kind}}</span></p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p>Need of: <span id="details-need">{{currAnimal.need}}</span></p>
                        </td>
                        <td>
                            <p>Location: <span id="details-location">{{currAnimal.location}}</span></p>
                        </td>
                    </tr>
                </table>
                <p>Description: <span id="details-description">{{currAnimal.description}}</span></p>
            </div>

        {{#if isAuthenticated}}
            <!--Edit and Delete are only for creator-->
            <div id="action-buttons">
                {{#if isOwner}}
                <a href="/catalog/{{currAnimal._id}}/edit" id="edit-btn">Edit</a>
                <a href="/catalog/{{currAnimal._id}}/delete" id="delete-btn">Delete</a>
                {{else}}
                    {{#if hasAlreadyDonate}}
                        <p id="already-donated">You already donated!</p>
                    {{else}}
                        <a href="/catalog/{{currAnimal._id}}/donate" id="donation-btn">Donation</a>
                 {{/if}}
                {{/if}}
            </div>
        {{/if}}

        </div>
    </section>
</main>