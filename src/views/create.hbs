<main class="create">
    <!-- Create Page (Only for logged-in users) -->
    <section id="create">
        <div class="form">
            <h2>Add item</h2>
            <form class="create-form" method="POST" action="/create">
                <input type="text" name="name" id="name" placeholder="Name" value="{{data.name}}"/>
                <input type="text" name="year" id="years" placeholder="Years" value="{{data.year}}"/>
                <input type="text" name="kind" id="kind" placeholder="Kind" value="{{data.kind}}"/>
                <input type="text" name="image" id="animal-img" placeholder="Image url" value="{{data.image}}"/>
                <input type="text" name="need" id="needs-of" placeholder="Needs of" value="{{data.need}}"/>
                <input type="text" name="location" id="location" placeholder="Location" value="{{data.location}}"/>
                <textarea id="description" placeholder="Description..." name="description">{{data.description}}</textarea>

                <button type="submit">Post</button>
            </form>
        </div>
    </section>
</main>